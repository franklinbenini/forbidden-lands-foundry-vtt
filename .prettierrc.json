{
	"$schema": "http://json.schemastore.org/prettierrc",
	"trailingComma": "all",
	"singleQuote": false,
	"endOfLine": "lf",
	"printWidth": 120,
	"tabWidth": 4,
	"useTabs": true,
	"requirePragma": false,
	"overrides": [
		{
			"files": ["*.scss", "*.css"],
			"options": {
				"requirePragma": false,
				"parser": "scss"
			}
		},
		{
			"files": "*.hbs",
			"options": {
				"htmlWhitespaceSensitivity": "strict",
				"parser": "html"
			}
		}
	]
}
